@model CategoryUpdateDTO
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="col-md-12">
    <div class="card">
        <h5 class="card-header">Yeni Makale Ekle</h5>
        <form asp-area="Admin" asp-controller="Category" asp-action="Update" enctype="multipart/form-data">
            <div class="card-body">

                <div asp-validation-summary="ModelOnly"></div>
              <input  type="hidden" asp-for="Id"/>

                <div class="m-2">
                    <label asp-for="Name" class="form-label">Kategori Adı</label>
                    <input asp-for="Name" type="text" class="form-control" id="defaultFormControlInput" placeholder="C Sharp" aria-describedby="defaultFormControlHelp">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
               


                <div class="form-group m-2">
                    <button type="submit" class="btn btn-outline-primary">Kaydet</button>
                </div>
            </div>

        </form>
    </div>
</div>
