﻿<div class="content-wrapper">

    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">



        <div class="row">
         
            <div class="col-lg-4 col-md-4 order-1">
                <div class="row">
                    <div class="col-lg-6 col-md-12 col-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title d-flex align-items-start justify-content-between">

                                    <i style="height:30px; font-size:2.25rem" class="menu-icon bx bx-paper-plane"></i>
                                </div>
                                <span class="fw-semibold d-block mb-1">Toplam  <br /> Makale Sayısı</span>
                                <h3 class="card-title mb-2" id="totalArticleCount"></h3>
                                <small class="text-success fw-semibold"></small>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 col-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title d-flex align-items-start justify-content-between">
                                    <i style="height:30px; font-size:2.25rem" class="menu-icon bx bx-category"></i>

                                </div>
                                <span class="fw-semibold d-block mb-1">Toplam Eklenen <br /> Kategori Sayısı</span>
                                <h3 class="card-title text-nowrap mb-1" id="totalCategoryCount"></h3>
                                <small class="text-success fw-semibold"></small>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 col-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title d-flex align-items-start justify-content-between">
                                    <i style="height:30px; font-size:2.25rem" class="menu-icon bx bx-user"></i>

                                </div>
                                <span class="fw-semibold d-block mb-1">Toplam Kullanıcı <br /> Sayısı</span>
                                <h3 class="card-title text-nowrap mb-1" id="totalUserCount"></h3>
                                <small class="text-success fw-semibold"></small>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 col-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title d-flex align-items-start justify-content-between">
                                    <i style="height:30px; font-size:2.25rem" class="menu-icon bx bx-camera"></i>

                                </div>
                                <span class="fw-semibold d-block mb-1">Toplam Resim <br /> Sayısı</span>
                                <h3 class="card-title text-nowrap mb-1" id="totalMediaCount"></h3>
                                <small class="text-success fw-semibold"></small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Total Revenue -->
            <div class="col-12 col-lg-8 order-2 order-md-3 order-lg-2 mb-4">
                <div class="card">
                    <div class="row row-bordered g-0">
                        <div class="col-md-12">
                            <h5 class="card-header m-0 me-2 pb-3">@DateTime.Now.Year Yılının Makale Yayınlama Analizi</h5>
                            <div id="customTotalRevenueChart" class="px-2"></div>
                        </div>
                       
                    </div>
                </div>
            </div>
            <!--/ Total Revenue -->
        


    </div>
    <!-- / Content -->
   


    <div class="content-backdrop fade"></div>
</div>

@section Scripts{
    <script src="~/js/dashboardIndex.js"></script>
    <script>
        var app = app || {}
        app.Urls = app.Urls || {}

        app.Urls.yearlyArticlesUrl = "@(Url.Action("YearlyArticleCounts", "Home"))";
        app.Urls.totalArticleCountUrl = "@(Url.Action("TotalArticleCount", "Home"))";
        app.Urls.totalCategoryCountUrl = "@(Url.Action("TotalCategoryCount", "Home"))";
        app.Urls.totalUserCountUrl = "@(Url.Action("TotalUserCount", "Home"))";
            app.Urls.totalMediaCountUrl = "@(Url.Action("TotalMediaCount", "Home"))";
    </script>
}