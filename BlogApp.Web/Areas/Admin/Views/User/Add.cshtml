@model UserAddDTO
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <h5 class="card-header">Yeni Kullanıcı Ekle</h5>
        <form asp-area="Admin" asp-controller="User" asp-action="Add" enctype="multipart/form-data">
            <div class="card-body">

                <div asp-validation-summary="ModelOnly"></div>
               
                <div class="m-2">
                    <label asp-for="RoleId" class="form-label">Kullanıcı Rol</label>
                    <select id="categoryList" class="form-control text-info" asp-for="RoleId" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>

                <div class="m-2">
                    <label asp-for="FirstName" class="form-label">İsminiz</label>
                    <input asp-for="FirstName" type="text" class="form-control" id="defaultFormControlInput" placeholder="isminiz..." aria-describedby="defaultFormControlHelp">
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>
                <div class="m-2">
                    <label asp-for="LastName" class="form-label">Soyisminiz</label>
                    <input asp-for="LastName" type="text" class="form-control" id="defaultFormControlInput"  placeholder="Soyisminiz..." aria-describedby="defaultFormControlHelp"></input>
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>
                <div class="m-2">
                    <label asp-for="Email" class="form-label">Email Adresiniz</label>
                    <input asp-for="Email" type="text" class="form-control" id="defaultFormControlInput" placeholder="Mail Adresiniz..." aria-describedby="defaultFormControlHelp"></input>
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
               
                <div class="m-2">
                    <label asp-for="PhoneNumber" class="form-label">Telefon Numaranız</label>
                    <input asp-for="PhoneNumber" type="text" class="form-control" id="defaultFormControlInput" placeholder="Telefon Numaranız..." aria-describedby="defaultFormControlHelp"></input>
                    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                </div>
                <div class="m-2">
                    <label asp-for="Password" class="form-label">Şifreniz</label>
                    <input asp-for="Password" type="password" class="form-control" id="defaultFormControlInput" placeholder="Şifreniz..." aria-describedby="defaultFormControlHelp"></input>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                @*<div class="m-2">
                    <label asp-for="Photo" class="form-label">Resim Ekle</label>
                    <input asp-for="Photo" type="file" accept="image/*" class="form-control" id="defaultFormControlInput"
                           aria-describedby="defaultFormControlHelp" />
                    <span class="text-danger" asp-validation-for="Photo"></span>
                </div>
*@

                <div class="form-group m-2">
                    <button type="submit" class="btn btn-outline-primary">Kaydet</button>
                </div>
            </div>

        </form>
    </div>
</div>




